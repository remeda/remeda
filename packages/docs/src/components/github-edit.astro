---
import { buttonVariants } from "@/components/ui/button";
import type { CollectionEntry, CollectionKey } from "astro:content";
import { SquarePenIcon } from "lucide-react";

const GITHUB_EDIT_BASE_URL =
  "https://github.com/remeda/remeda/blob/main/packages/docs/src/content/";

type Props = {
  readonly entry: CollectionEntry<CollectionKey>;
};

const {
  entry: { collection, id },
} = Astro.props;

const url = new URL(`${collection}/${id}.md`, GITHUB_EDIT_BASE_URL);
---

<a
  class:list={buttonVariants({ variant: "secondary", size: "sm" })}
  href={url}
  target="_blank"
  title="Edit on Github"
>
  <SquarePenIcon />
  <span class="sr-only">View source on GitHub</span>
</a>

---
import type { CollectionEntry } from "astro:content";
import type { docsArticlesCollectionName } from "@/content/docs-articles/content.config";
import { render } from "astro:content";
import Prose from "./prose.astro";

type Props = {
  readonly article: CollectionEntry<typeof docsArticlesCollectionName>;
  readonly id: string;
  readonly ["class:list"]?: string;
};

const { article, ...props } = Astro.props;

const { Content } = await render(article);
---

<Prose {...props}>
  <Content />
</Prose>

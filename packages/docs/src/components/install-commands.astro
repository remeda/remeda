---
import { CopyButton } from "./copy-button";
import ThemedCode from "./themed-code.astro";

const COMMANDS = [
  "npm install remeda",
  "pnpm add remeda",
  "yarn add remeda",
  "bun install remeda",
  "deno add jsr:@remeda/remeda",
];
---

<section class="max-w-80">
  {
    COMMANDS.map((command) => (
      <article class="relative">
        <ThemedCode code={command} lang="bash" />
        <div class="absolute top-1/2 right-2 -translate-y-1/2">
          <CopyButton
            className="text-background dark:text-foreground"
            client:visible
            value={command}
          />
        </div>
      </article>
    ))
  }
</section>

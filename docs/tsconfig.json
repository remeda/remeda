{
  "extends": "astro/tsconfigs/strictest",
  "include": ["src/**/*", ".eslintrc.cjs", "*.config.js"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowArbitraryExtensions": true,
    "plugins": [{ "name": "@astro/ts-plugin" }],
    "verbatimModuleSyntax": true,
    "allowJs": true
  }
}

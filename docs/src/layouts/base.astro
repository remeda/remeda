---
import Header from "@/components/header.astro";
import "@/styles/globals.css";

type Props = {
  readonly title?: string | undefined;
};

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content='The first "data-first" and "data-last" utility library designed specifically for TypeScript'
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="preconnect"
      href="https://416K8H7DAR-dsn.algolia.net"
      crossorigin
    />
    <title>{`${title === undefined ? "" : `${title} - `}Remeda`}</title>
    <script is:inline src="/dist/scripts/init-theme.js"></script>
    <script type="module">
      import * as R from "https://esm.sh/remeda";
      window.R = R;
      console.log(
        "Use variable R right here to access the latest version of the library",
      );
    </script>
  </head>
  <body class="container flex flex-col items-stretch px-0">
    <Header />
    <slot />
  </body>
</html>

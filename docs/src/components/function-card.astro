---
import FunctionApi from "@/components/function-api.astro";
import { Card, CardContent, CardHeader } from "@/components/ui/card";
import type { DocumentedFunction } from "@/lib/transform";
import FunctionDescription from "./function-description.astro";

type Props = {
  readonly func: DocumentedFunction;
};

const { func } = Astro.props;
---

<Card id={func.name} className="scroll-mt-20">
  <CardHeader>
    <FunctionDescription func={func} />
  </CardHeader>
  <CardContent className="grid gap-6">
    {func.methods.map((method) => <FunctionApi method={method} />)}
  </CardContent>
</Card>

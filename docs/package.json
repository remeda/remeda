{
  "name": "remeda-docs",
  "version": "1.0.0",
  "repository": "git@github.com:remeda/docs.git",
  "license": "MIT",
  "author": "≈Åukasz Sentkiewicz",
  "scripts": {
    "build": "tsc && vite build",
    "build:netlify-ci": "npm run typedoc && npm run transform && npm run build && npm run netlify-spa-fix",
    "clean": "rm -rf dist && rm -rf build",
    "dev": "vite",
    "lint": "eslint src --ext ts,tsx --max-warnings 0",
    "netlify-spa-fix": "cp _redirects dist/_redirects",
    "preview": "vite preview",
    "transform": "ts-node scripts/transform build/out.json build/data.json",
    "typedoc": "typedoc --json build/out.json"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "marked": "^11.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.3.6",
    "tiny-invariant": "^1.3.1",
    "ts-node": "^10.9.1",
    "type-fest": "^4.8.3",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2",
    "vite": "^4.5.1"
  }
}

  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./build",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typedoc": "typedoc --json build/out.json",
    "transform": "ts-node scripts/transform build/out.json src/data.json",
    "netlify-spa-fix": "cp _redirects dist/_redirects",
    "build:netlify-ci": "yarn run typedoc && yarn run transform && yarn run build && yarn run netlify-spa-fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "marked": "^7.0.5",
    "prettier": "^3.0.3",
    "sass": "^1.66.0",
    "ts-node": "^10.9.1",
    "type-fest": "^4.3.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.5"
  }

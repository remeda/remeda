{
  "name": "remeda-docs",
  "version": "1.0.0",
  "repository": "git@github.com:remeda/docs.git",
  "author": "≈Åukasz Sentkiewicz",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && rm -rf build && rm src/data.json",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --max-warnings 0",
    "preview": "vite preview",
    "typedoc": "typedoc --json build/out.json",
    "transform": "ts-node scripts/transform build/out.json src/data.json",
    "netlify-spa-fix": "cp _redirects dist/_redirects",
    "build:netlify-ci": "yarn run typedoc && yarn run transform && yarn run build && yarn run netlify-spa-fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "marked": "^7.0.5",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "tiny-invariant": "^1.3.1",
    "ts-node": "^10.9.1",
    "type-fest": "^4.3.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  }
}

{
  "name": "remeda",
  "version": "2.0.0",
  "description": "A utility library for JavaScript and Typescript.",
  "keywords": [
    "algo",
    "algorithm",
    "curried",
    "fp",
    "functional",
    "generics",
    "lodash",
    "ramda",
    "stdlib",
    "toolkit",
    "ts",
    "types",
    "typescript",
    "underscore",
    "util",
    "utilities",
    "utility",
    "utils"
  ],
  "homepage": "https://remedajs.com/",
  "bugs": {
    "url": "https://github.com/remeda/remeda/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remeda/remeda.git"
  },
  "license": "MIT",
  "author": "≈Åukasz Sentkiewicz",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "coverage": "vitest run --coverage",
    "docs:build": "cd docs && npm ci && npm run build:all",
    "lint": "eslint --fix --max-warnings 0 --cache --cache-location ./node_modules/.cache/eslint/ .",
    "lint:build": "attw --pack . && publint",
    "prepare": "husky",
    "prettier": "prettier . --write",
    "release": "semantic-release",
    "test": "vitest",
    "typeCheck": "tsc",
    "typeCheck:dist": "tsc --project tsconfig.dist.json"
  },
  "dependencies": {
    "type-fest": "^4.15.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.2",
    "@eslint/js": "^8.57.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.12.4",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "publint": "^0.2.7",
    "semantic-release": "^23.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.5.0",
    "vitest": "^1.4.0"
  }
}

{
  "$schema": "http://json.schemastore.org/tsconfig",

  "include": ["dist"],

  "compilerOptions": {
    // TYPE CHECKING
    "strict": true,

    // MODULES
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // EMIT
    "noEmit": true,

    // LANGUAGE AND ENVIRONMENT
    "target": "ES2022",
    "lib": ["ES2022"],

    // COMPLETENESS
    "skipDefaultLibCheck": false,
    "skipLibCheck": false
  }
}
